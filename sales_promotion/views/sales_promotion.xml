<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sales_promotion_orders_form" model="ir.ui.view">
            <field name="name">sales.promotion.orders.form</field>
            <field name="model">sales.promotion</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group col="4">
                            <field name="customer"/>
                            <field name="promotion_date"/>
                        </group>
                        <group>
                            <group>
                                <field name="state"/>
                                <field name="items"/>
                                <field name="item_qty"/>
                            </group>
                            <group>
                                <field name="discount" attrs="{'invisible': [('state', '!=', 'get_disc')]}"/>
                                <field name="free_item" attrs="{'invisible': [('state', '!=', 'buy_x_get_y')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sales_promotion_orders_tree" model="ir.ui.view">
            <field name="name">sales.promotion.orders.tree</field>
            <field name="model">sales.promotion</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="customer"/>
                    <field name="promotion_date"/>
                </tree>
            </field>
        </record>

        <record id="sales_promotion_orders_action" model="ir.actions.act_window">
            <field name="name">Get Sale Promotion</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sales.promotion</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Your First Promotion
                </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="sales_promotion_orders_menu" name="Get Sale Promotion" parent="sales_order_root"
                  action="sales_promotion_orders_action" sequence="3"/>

    </data>
</odoo>